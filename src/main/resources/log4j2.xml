<?xml version="1.0" encoding="UTF-8"?>
<configuration status="WARN" name="kafka-app" packages="">

	<Appenders>
		<Console name="CONSOLE" target="SYSTEM_OUT">
			<PatternLayout pattern="[%d{DEFAULT}] %5p [%logger]: %m%n" />
		</Console>
	</Appenders>

	<Loggers>
		<Root level="DEBUG">
			<AppenderRef ref="CONSOLE" />
		</Root>
	</Loggers>

</configuration>
